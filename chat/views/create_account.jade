doctype html
html()
  head
    title= title
    script(src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js")
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.css")
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap-theme.css")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.js")

    style.
      .hero-unit{
        padding: 5% 5% 3% 5%;
        background-color: #eeeeee;
      }

      .m-top-3{
        margin-top: 3%;
      }

      .m-right-16{
        margin-right: 16%;
      }

      .m-top-10{
        margin-top:10%;
      }

      label{
        color: #333333;
      }

      h1{
        color: #EEEEEE;
      }

      .m-top--7{
        margin-top: -7%;
      }

      .m-left-10{
        margin-left: 10%;
      }

      html{
        height: 100%;
      }

      body{
        background-image: url('../notebook.png');
        height: 100%;
        margin: 0;
        background-repeat: no-repeat;
        background-attachment: fixed;
        overflow: hidden;
      }

      #error{
        color: #FE2E2E;
      }

      hr{
        margin: 3.2% auto 0 20%;
      }

      footer p{
        margin: 1% auto 0 52%;
      }

      a:hover{
        text-decoration: none;
        background-color: #333333;
        border-radius: 5px;
        color: #eeeeee;
      }

      a{
        text-decoration: none;
        color: white;
        padding: 2%;
      }

      .m-right-11{
        margin-right: 11%;
      }

      .m-right-12{
        margin-right: 12%;
      }

      .m-right-13{
        margin-right: 13%;
      }

      .m-top--2{
        margin-top: -2%;
      }

      .m-left-11{
        margin-left: 11%;
      }

      .m-top-7{
        margin-top: 7%;
      }

      .m-left-6{
        margin-left: 6%;
      }

      .m-top--3{
        margin-top:-2.7%;
      }

      .m-right-10{
        margin-right: 10%;
      }

  body
    h1(class="col-xs-6 m-top-7 m-left-11") Create Account
    nav(class="col-xs-4 pull-right m-right-12 m-top--3")
      a(href="/" class="active") Home
      a(href="/signup" class="m-left-6") Sign Up
      a(href="/log" class="m-left-6") Sign In

    form(action="/create_account" method="post" class="hero-unit col-xs-4 pull-right m-right-10 m-top-3")
      span(id="error") #{error}
      label(class="m-top-3") Name
      br
      input(type="text" name="name" required)
      br
      label(class="m-top-3") Username
      br
      input(type="text" name="username" required)
      br
      label(class="m-top-3") Password
      br
      input(type="password" name="password" required)
      br
      label(class="m-top-3") Email
      br
      input(type="email" name="email" required)
      br
      br
      input(type="submit" class="btn btn-primary")
    br
    footer(class="col-xs-10")
      hr
      p(style="color: white;")
